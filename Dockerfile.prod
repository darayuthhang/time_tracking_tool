FROM node:18-alpine

WORKDIR /usr/app

COPY package.json knexfile.js ./
COPY . /usr/app/

RUN npm install --global npm && \
    npm install --global knex && \
    npm install bcrypt && \
    npm install && \
    npm cache clean --force && \
    npm install --prefix client && \
    npm run --prefix client build

# Move back to the server folder
WORKDIR /usr/app
EXPOSE 5000

CMD ["npm", "run", "start"]


